{
  "name": "webappstarter",
  "version": "1.0.0",
  "description": "This project is a bootsrap for a complete web app with react&redux on the clinet side and koa2 on the serverside for building the REST API",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build:dev:client": "npm run clean && webpack",
    "build:production:client": "NODE_ENV=production npm run clean && webpack -p",
    "build:production:server": "NODE_ENV=production babel src/server -d dist",
    "build:production": "npm run build:production:client && npm run build:production:server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:dev:client": "webpack-dev-server",
    "start:dev:server": "nodemon src/server/index.js",
    "start:production": "NODE_ENV=production node dist/index.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "html-webpack-plugin": "^2.29.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.2",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "config": "^1.26.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.0.1",
    "koa-mount": "^3.0.0",
    "koa-passport": "^3.0.0",
    "koa-router": "^7.2.1",
    "koa-send": "^4.1.0",
    "koa-static": "^3.0.0",
    "koa2-cors": "^2.0.3",
    "mongodb": "^2.2.29",
    "mongoose": "^4.11.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "passport-local": "^1.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "redux": "^3.7.1",
    "redux-thunk": "^2.2.0"
  },
  "engines":{"node":"8.0.0"}
}
